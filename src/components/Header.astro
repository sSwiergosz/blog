---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
import me from "../../public/me.jpeg";
---

<header>
	<h2>
		<img src={me} alt="Image of an author" />
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink
			href="https://www.linkedin.com/in/szymon-swiergosz"
			target="_blank">LinkedIn</HeaderLink
		>
		<HeaderLink href="https://github.com/sSwiergosz" target="_blank">
			GitHub
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		display: flex;
		align-items: center;
		gap: 1.25rem;
		margin: 0.5em 0;
	}
	img {
		border-radius: 50%;
		height: 5rem;
		width: auto;
	}
</style>
